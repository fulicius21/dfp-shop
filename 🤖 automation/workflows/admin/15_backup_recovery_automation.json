    {
      "parameters": {
        "jsCode": "// Generate comprehensive backup report\nconst backupSummary = $json.backupSummary;\nconst verificationResult = $input.all().length > 1 ? $input.all()[1].json : null;\nconst cloudSyncResult = $input.all().length > 2 ? $input.all()[2].json : null;\nconst cleanupResult = $input.all().length > 3 ? $input.all()[3].json : null;\n\n// Status emoji mapping\nconst statusEmoji = {\n  success: '‚úÖ',\n  partial: '‚ö†Ô∏è',\n  failed: '‚ùå'\n};\n\n// Generate Telegram message\nlet message = `üóÑÔ∏è **BACKUP REPORT** ${statusEmoji[backupSummary.status]}\\n`;\nmessage += `üìÖ **${DateTime.fromISO(backupSummary.timestamp).toFormat('dd.MM.yyyy HH:mm')}**\\n\\n`;\n\n// Overall Status\nmessage += `üìä **OVERALL STATUS**\\n`;\nmessage += `‚îú Status: ${statusEmoji[backupSummary.status]} **${backupSummary.status.toUpperCase()}**\\n`;\nmessage += `‚îú Success Rate: **${backupSummary.overallStats.successRate}%** (${backupSummary.overallStats.successfulBackups}/${backupSummary.overallStats.totalBackups})\\n`;\nmessage += `‚îú Total Size: **${backupSummary.overallStats.totalSizeFormatted}**\\n`;\nmessage += `‚îî Duration: **${backupSummary.overallStats.totalDurationFormatted}**\\n\\n`;\n\n// Individual Backup Results\nmessage += `üìÅ **BACKUP COMPONENTS**\\n`;\nObject.entries(backupSummary.backupResults).forEach(([type, result]) => {\n  const emoji = result.success ? '‚úÖ' : '‚ùå';\n  const sizeMB = (result.size / 1024 / 1024).toFixed(1);\n  message += `${emoji} ${type.charAt(0).toUpperCase() + type.slice(1)}: **${sizeMB}MB** (${result.duration}s)\\n`;\n});\n\n// Verification Results\nif (verificationResult) {\n  message += `\\nüîç **VERIFICATION**\\n`;\n  message += `‚îú Integrity: ${verificationResult.integrityCheck ? '‚úÖ' : '‚ùå'} **${verificationResult.integrityCheck ? 'PASSED' : 'FAILED'}**\\n`;\n  message += `‚îú Completeness: ${verificationResult.completenessCheck ? '‚úÖ' : '‚ùå'} **${verificationResult.completenessCheck ? 'PASSED' : 'FAILED'}**\\n`;\n  message += `‚îî Verification Score: **${verificationResult.verificationScore || 0}%**\\n`;\n}\n\n// Cloud Sync Results\nif (cloudSyncResult) {\n  message += `\\n‚òÅÔ∏è **CLOUD SYNC**\\n`;\n  message += `‚îú AWS S3: ${cloudSyncResult.aws_s3?.success ? '‚úÖ' : '‚ùå'} **${cloudSyncResult.aws_s3?.success ? 'SUCCESS' : 'FAILED'}**\\n`;\n  message += `‚îú Google Drive: ${cloudSyncResult.google_drive?.success ? '‚úÖ' : '‚ùå'} **${cloudSyncResult.google_drive?.success ? 'SUCCESS' : 'FAILED'}**\\n`;\n  message += `‚îî Sync Duration: **${cloudSyncResult.totalDuration || 0}s**\\n`;\n}\n\n// Critical Issues\nif (backupSummary.statusDetails.criticalFailures.length > 0) {\n  message += `\\nüö® **CRITICAL ISSUES**\\n`;\n  backupSummary.statusDetails.criticalFailures.forEach(issue => {\n    message += `‚Ä¢ ${issue}\\n`;\n  });\n}\n\n// Warnings\nif (backupSummary.statusDetails.warnings.length > 0) {\n  message += `\\n‚ö†Ô∏è **WARNINGS**\\n`;\n  backupSummary.statusDetails.warnings.forEach(warning => {\n    message += `‚Ä¢ ${warning}\\n`;\n  });\n}\n\n// Cleanup Results\nif (cleanupResult) {\n  message += `\\nüßπ **CLEANUP**\\n`;\n  message += `‚îú Files Cleaned: **${cleanupResult.filesRemoved || 0}**\\n`;\n  message += `‚îú Space Freed: **${((cleanupResult.spaceFreed || 0) / 1024 / 1024 / 1024).toFixed(2)}GB**\\n`;\n  message += `‚îî Retention: **${backupSummary.retentionDate}**\\n`;\n}\n\nmessage += `\\nüìä [Backup Dashboard](${process.env.DRESSFORP_FRONTEND_URL}/admin/backups)\\n\\n`;\nmessage += `*Automated Backup & Recovery System*`;\n\nreturn { \n  backupMessage: message,\n  needsAlert: backupSummary.status !== 'success' || backupSummary.statusDetails.criticalFailures.length > 0\n};"
      },
